<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="280.0" prefWidth="320.0" spacing="20.0" style="-fx-background-color: #171717;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lab3.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="errorText1" text="Login" textFill="#f3a718" />

    <TextField fx:id="username" promptText="ENTER EMAIL" />
    <TextField fx:id="password" promptText="ENTER PASSWORD" />
    <Label fx:id="errorText" alignment="CENTER" prefHeight="43.0" prefWidth="280.0" textAlignment="CENTER" textFill="#f3a718" />
    <Button onAction="#onLoginButtonClick" prefHeight="8.0" prefWidth="58.0" text="Log In">
        <font>
            <Font size="14.0" />
        </font></Button>
</VBox>
